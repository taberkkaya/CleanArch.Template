{
  "$schema": "http://json.schemastore.org/template",
  "author": "ataberk",
  "classifications": ["Web", "API", "Clean Architecture"],
  "name": "Clean Architecture Template",
  "identity": "CleanArch.Template",
  "shortName": "cleanArch",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "sourceName": "CleanArch",
  "sources": [
    {
      "source": "./src/CleanArch.Application",
      "target": "CleanArch.Application"
    },
    { "source": "./src/CleanArch.Domain", "target": "CleanArch.Domain" },
    {
      "source": "./src/CleanArch.Infrastructure",
      "target": "CleanArch.Infrastructure"
    },
    {
      "source": "./src/CleanArch.Template.AppHost",
      "target": "CleanArch.Template.AppHost"
    },
    {
      "source": "./src/CleanArch.Template.ServiceDefaults",
      "target": "CleanArch.Template.ServiceDefaults"
    },
    { "source": "./src/CleanArch.WebApi", "target": "CleanArch.WebApi" }
  ],
  "iconFile": "logo64x64.png",
  "preferNameDirectory": true,
  "symbols": {
    "Framework": {
      "type": "parameter",
      "datatype": "choice",
      "choices": [
        { "choice": "net9.0", "description": ".NET 9.0" },
        { "choice": "net8.0", "description": ".NET 8.0" }
      ],
      "defaultValue": "net9.0",
      "replaces": "net9.0"
    }
  }
}
